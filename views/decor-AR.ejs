<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amaverse</title>
    <link rel="stylesheet" href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css">
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>

    <!-- three.js -->
    <script src="https://unpkg.com/three@0.126.0/build/three.js"></script>
    <script src="https://unpkg.com/three@0.126.0/examples/js/loaders/GLTFLoader.js"></script>

  </head>
  <body>
    <div id="enter-ar-info" class="mdc-card demo-card">
      <!-- Starting an immersive WebXR session requires user interaction. Start the WebXR experience with a simple button. -->
      <a id="enter-ar" class="mdc-button mdc-button--raised mdc-button--accent">
        Start augmented reality
      </a>
    </div>

    <div id="stabilization"></div>

    <!-- Invisible div to store the 3D model name
    This model name will be passed by the server side to the 
    Ejs template and will be stored in this div, such that
    the data can be picked up by the script file -->
    <div id="model_name" style="display: none;">
      <%= model_name %>
    </div>

    <script src="/js/decor-3d-models-json.js"></script>
    <script src="/js/decor-ar-utils.js"></script>
    <script src="/js/decor-ar.js"></script>

  </body>
</html>
